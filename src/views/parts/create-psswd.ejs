
<section> <!-- Essa section vai receber o conteudo do formulario (entre como participante) -->
    <h2>Crie sua própria sala</h2>

    <form action="/create-room" method='POST'> <!-- vai enviar para essa rota o forumlario de criar sala -->
        
        <label class="sr-only" for="room-pass">Insira uma senha</label>  <!-- esse label nao aparece mas é nescessario para leitores para cego -->
        <input name='password' type="password" required id='room-pass' placeholder="Insira uma senha"> <!-- o campo required obriga a digitação da senha-->
        <button>
            <img src='images/users-white.svg' alt='Entrar na sala'>
            Criar Sala
        </button>
    </form>
</section>
